{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "common": ["../common"]
    }
  },
  "exclude": ["node_modules", ".git", "dist"],
  "references": [
    { 
      "path": "../common/tsconfig.json"
    }
  ]
}
